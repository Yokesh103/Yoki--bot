pipeline {
    agent any

    environment {
        HOST = "host.docker.internal"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "=== Checking out Git repository ==="
                git branch: 'main',
                    url: 'https://github.com/Yokesh103/Yoki--bot.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo "Docker build skipped – Jenkins container cannot run Docker safely."
                sh 'echo "Build stage executed - no Docker build inside Jenkins"'
            }
        }

        stage('Run Smoke Tests') {
            steps {

                echo "=== Waiting for greeks-service ==="
                sh '''
                    for i in {1..30}; do
                        if curl -sf http://host.docker.internal:8001/health >/dev/null; then
                            echo "greeks-service is UP"
                            break
                        fi
                        echo "waiting for greeks-service..."
                        sleep 2
                    done
                '''

                echo "=== Smoke Test 1: OptionChain ==="
                sh 'curl -sf "http://host.docker.internal:8000/optionchain?symbol=BANKNIFTY"'

                echo "=== Smoke Test 2: Greeks (Black-76) ==="
                sh '''
                    curl -sf -X POST "http://host.docker.internal:8001/compute" \
                      -H "Content-Type: application/json" \
                      -d '{
                          "underlying": 59039,
                          "strike": 59000,
                          "option_price": 410,
                          "expiry": "2025-11-20T15:30:00",
                          "option_type": "CE",
                          "model": "black76"
                      }'
                '''

                echo "=== Smoke Test 3: Signal ==="
                sh 'curl -sf "http://host.docker.internal:8002/signal?strategy=butterfly&symbol=BANKNIFTY"'

                echo "=== Smoke Test 4: OrderManager ==="
                sh '''
                    curl -sf -X POST "http://host.docker.internal:8003/createOrder" \
                    -H "Content-Type: application/json" \
                    -d '{"symbol":"BANKNIFTY","strategy":"butterfly","legs":[]}'
                '''

                echo "=== Smoke Test 5: PaperExec ==="
                sh '''
                    curl -sf -X POST "http://host.docker.internal:8004/exec" \
                    -H "Content-Type: application/json" \
                    -d '{"order_id":"test-1","legs":[],"qty":25}'
                '''
            }
        }

        stage('Push to Registry') {
            when { expression { false } }
            steps {
                echo "Push to registry disabled."
            }
        }
    }

    post {
        success {
            echo "Pipeline SUCCESS — All services healthy and responding."
        }
        failure {
            echo "Pipeline FAILED — One or more smoke tests did not respond."
        }
    }
}
