pipeline {
    agent any

    environment {
        HOST = "host.docker.internal"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "=== Checking out Git repository ==="
                git branch: 'main',
                    url: 'https://github.com/Yokesh103/Yoki--bot.git'
            }
        }

       stage('Build Docker Images') {
    steps {
        echo "Docker build skipped – Jenkins container cannot run Docker safely."
        sh '''
            echo "Build stage executed - no Docker build inside Jenkins"
        '''
    }
}


        stage('Run Smoke Tests') {
            steps {
                sh '''
                echo "=== Smoke Test 1: OptionChain ==="
                curl -sf "http://$HOST:8000/optionchain?symbol=BANKNIFTY" || exit 1

                echo "=== Smoke Test 2: Greeks ==="
                curl -sf -X POST "http://$HOST:8001/compute" \
                    -H "Content-Type: application/json" \
                    -d '{"ltp":400,"strike":59000,"ttm_days":3,"option_type":"CE","underlying":59039}' || exit 1

                echo "=== Smoke Test 3: Signal ==="
                curl -sf "http://$HOST:8002/signal?strategy=butterfly&symbol=BANKNIFTY" || exit 1

                echo "=== Smoke Test 4: OrderManager ==="
                curl -sf -X POST "http://$HOST:8003/createOrder" \
                    -H "Content-Type: application/json" \
                    -d '{"symbol":"BANKNIFTY","strategy":"butterfly","legs":[]}' || exit 1

                echo "=== Smoke Test 5: PaperExec ==="
                curl -sf -X POST "http://$HOST:8004/exec" \
                    -H "Content-Type: application/json" \
                    -d '{"order_id":"test-1","legs":[],"qty":25}' || exit 1

                echo "=== All Smoke Tests Passed Successfully ==="
                '''
            }
        }

        stage('Push to Registry') {
            when { expression { false } }  // Disabled for now
            steps {
                echo "Push to registry disabled."
            }
        }
    }

    post {
        success {
            echo "Pipeline SUCCESS — All services healthy and responding."
        }
        failure {
            echo "Pipeline FAILED — One or more smoke tests did not respond."
        }
    }
}
